{
    "name": "twoh/twoh_base",
    "type": "typo3-cms-extension",
    "description": "This extension allows you to move the TYPO3 context into separate files instead of working with the `AdditionalConfiguration.php`.",
    "keywords": [
        "TYPO3",
        "extension",
        "content",
        "element"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Andreas Reichel",
            "role": "Developer",
            "email": "a.reichel91@outlook.com"
        },
        {
            "name": "Igor Smertin",
            "role": "Developer",
            "email": "igor.smertin@web.de"
        }
    ],
    "version": "1.0.5",
    "support": {
        "issues": "https://github.com/twohreichel/twoh_base/issues",
        "source": "https://github.com/twohreichel/twoh_base",
        "docs": "https://docs.typo3.org/p/twoh/twoh_base/main/en-us/"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "composer/installers": true
        }
    },
    "require": {
        "php": "^8.2 <8.4",
        "typo3/cms-core": "^13.4",
        "composer-plugin-api": "^2.0"
    },
     "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^11.5",
        "friendsofphp/php-cs-fixer": "^3.91",
        "typo3/testing-framework": "^8.0"
    },
    "scripts": {
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "test:unit": "phpunit -c Build/phpunit/UnitTests.xml"
    },
    "autoload": {
        "psr-4": {
            "TWOH\\TwohBase\\": "Classes/"
        },
        "classmap": ["Classes/"]
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "twoh_base"
        }
    }
}
